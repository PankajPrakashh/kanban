{
  "name": "kanban",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean:install": "rm -rf node_modules && rm -f package-lock.json && npm cache clean --force && npm i",
    "clean:api": "rimraf ./dist/api",
    "clean:app": "rimraf ./dist/app",
    "clean": "npm-run-all clean:api clean:app",
    "transpile": "babel ./api --out-dir ./dist/api",
    "build:api": "npm-run-all clean:api transpile",
    "build": "npm-run-all build:api",
    "server": "node ./dist/api/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "request": "^2.88.2"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "./dist/api/*",
      "./dist/api/public/*"
    ],
    "ignore": [
      "./dist/api/**/__tests__/**",
      "./dist/api/**/*.test.js",
      "./dist/api/**/*.spec.js"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-polyfill": "^6.26.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
