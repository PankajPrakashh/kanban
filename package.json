{
  "name": "kanban",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "clean:install": "rm -rf node_modules && rm -f package-lock.json && npm cache clean --force && npm i",
    "clean:api": "rimraf ./dist/api",
    "clean:app": "rimraf ./dist/app",
    "clean": "npm-run-all clean:api clean:app",
    "transpile": "babel ./api --out-dir ./dist/api",
    "build:api": "npm-run-all clean:api tsc",
    "build": "npm-run-all build:api",
    "server": "node ./dist/api/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "watch:dev": "nodemon",
    "tsc": "tsc"
  },
  "dependencies": {
    "@angular/animations": "~9.0.2",
    "@angular/common": "~9.0.2",
    "@angular/compiler": "~9.0.2",
    "@angular/core": "~9.0.2",
    "@angular/forms": "~9.0.2",
    "@angular/platform-browser": "~9.0.2",
    "@angular/platform-browser-dynamic": "~9.0.2",
    "@angular/router": "~9.0.2",
    "rxjs": "~6.5.4",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "request": "^2.88.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.900.3",
    "@angular/cli": "~9.0.3",
    "@angular/compiler-cli": "~9.0.2",
    "@angular/language-service": "~9.0.2",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.6",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/morgan": "^1.9.0",
    "@types/node": "^12.11.1",
    "babel-plugin-minify-dead-code-elimination": "^0.5.1",
    "babel-polyfill": "^6.26.0",
    "codelyzer": "^5.1.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "protractor": "~5.4.3",
    "rimraf": "^3.0.2",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.7.5"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "./dist/api/*",
      "./dist/api/public/*"
    ],
    "ignore": [
      "./dist/api/**/__tests__/**",
      "./dist/api/**/*.test.js",
      "./dist/api/**/*.spec.js"
    ]
  }
}
